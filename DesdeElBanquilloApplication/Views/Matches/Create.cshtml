@model DesdeElBanquilloApplication.Models.Match

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MatchDate" class="control-label"></label>
                <input asp-for="MatchDate" class="form-control" />
                <span asp-validation-for="MatchDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeGoals" class="control-label"></label>
                <input asp-for="HomeGoals" class="form-control" />
                <span asp-validation-for="HomeGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayGoals" class="control-label"></label>
                <input asp-for="AwayGoals" class="form-control" />
                <span asp-validation-for="AwayGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<MatchStatus>()"
                        class="form-control">
                    <option value="">Seleccione un status</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Referee" class="control-label"></label>
                <input asp-for="Referee" class="form-control" />
                <span asp-validation-for="Referee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdHomeTeam" class="control-label"></label>
                <select asp-for="IdHomeTeam" class ="form-control" asp-items="ViewBag.IdHomeTeam"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdAwayTeam" class="control-label"></label>
                <select asp-for="IdAwayTeam" class ="form-control" asp-items="ViewBag.IdAwayTeam"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdCompetition" class="control-label"></label>
                <select asp-for="IdCompetition" class ="form-control" asp-items="ViewBag.IdCompetition"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdStadium" class="control-label"></label>
                <select asp-for="IdStadium" class ="form-control" asp-items="ViewBag.IdStadium"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
